{
  "name": "smoke-test-transform",
  "type": "TRANSFORM",
  "description": "Test flow that passes data through unchanged",
  "subscriptions": [
    {"topics": ["smoke-transform"]}
  ],
  "transformActions": [{
    "name": "SmokeTransformAction",
    "type": "org.deltafi.core.action.Delay",
    "parameters": {
      "minDelayMS": "${minDelayMS}",
      "maxDelayMS": "${maxDelayMS}"
    }
  }],
  "publishRules": {
    "matchingPolicy": "FIRST_MATCHING",
    "defaultRule": {"defaultBehavior": "ERROR"},
    "rules": [
      {"topics": ["smoke-egress"]}
    ]
  }
}
