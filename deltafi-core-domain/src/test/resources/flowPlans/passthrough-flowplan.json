{
  "name": "passthrough",
  "description": "Flow that passes data through unchanged",
  "version": "0.17.0",
  "sourcePlugin": {
    "groupId": "org.deltafi.passthrough",
    "artifactId": "deltafi-passthrough",
    "version": "0.17.0"
  },
  "ingressFlowConfigurations": [
    {
      "name": "ingressFlow",
      "loadAction": "PassthroughLoadAction",
      "transformActions": [
        "PassthroughTransformAction"
      ]
    }
  ],
  "egressFlowConfigurations": [
    {
      "name": "egressFlow",
      "egressAction": "PassthroughEgressAction",
      "formatAction": "PassthroughFormatAction",
      "includeIngressFlows": [
        "ingressFlow"
      ],
      "validateActions": [
        "PassthroughValidateAction"
      ]
    }
  ],
  "transformActionConfigurations": [
    {
      "name": "PassthroughTransformAction",
      "consumes": "${incoming.type}",
      "produces": "${transform.produces}",
      "type": "org.deltafi.passthrough.action.RoteTransformAction",
      "parameters": {
        "resultType": "${transform.produces}"
      }
    }
  ],
  "loadActionConfigurations": [
    {
      "name": "PassthroughLoadAction",
      "consumes": "${transform.produces}",
      "type": "org.deltafi.passthrough.action.RoteLoadAction",
      "parameters": {
        "domains": [
          "${domain.type}"
        ]
      }
    }
  ],
  "formatActionConfigurations": [
    {
      "name": "PassthroughFormatAction",
      "requiresDomains": [
        "${domain.type}"
      ],
      "type": "org.deltafi.passthrough.action.RoteFormatAction"
    }
  ],
  "validateActionConfigurations": [
    {
      "name": "PassthroughValidateAction",
      "type": "org.deltafi.passthrough.action.RubberStampValidateAction"
    }
  ],
  "egressActionConfigurations": [
    {
      "name": "PassthroughEgressAction",
      "type": "org.deltafi.core.action.RestPostEgressAction",
      "parameters": {
        "egressFlow": "egressFlow",
        "metadataKey": "deltafiMetadata",
        "url": "${egressUrl}"
      }
    }
  ],
  "variables": [
    {
      "name": "incoming.type",
      "description": "Type of data coming into the flow",
      "dataType": "STRING",
      "required": true,
      "defaultValue": "binary"
    },{
      "name": "transform.produces",
      "description": "Data type produced by the transform action",
      "dataType": "STRING",
      "required": true,
      "defaultValue": "passthrough-binary"
    },{
      "name": "domain.type",
      "description": "Domain that is loaded and required by the format action",
      "dataType": "STRING",
      "required": true,
      "defaultValue": "binary"
    },{
      "name": "egressUrl",
      "description": "The URL to post the DeltaFile to",
      "dataType": "STRING",
      "required": true,
      "defaultValue": "http://deltafi-egress-sink-service"
    }
  ]
}
