import org.deltafi.test.asserters.IngressResultAssert;
import org.deltafi.test.content.DeltaFiTestRunner;
import org.junit.jupiter.api.Test;

import java.util.UUID;

class {{.TestClassName}} {
    private final {{.ClassName}} action = new {{.ClassName}}();
    private final DeltaFiTestRunner deltaFiTestRunner = DeltaFiTestRunner.setup();

    @Test
    void testIngress() {
        IngressResultAssert.assertThat(runTest("test-flow"))
                .isNotNull();
    }

    private IngressResultType runTest(String flowName) {
        return action.ingress(
                ActionContext.builder()
                        .did(UUID.randomUUID())
                        .flowName(flowName)
                        .contentStorageService(deltaFiTestRunner.actionContext().getContentStorageService())
                        .build(),
                new ActionParameters());
    }
}

